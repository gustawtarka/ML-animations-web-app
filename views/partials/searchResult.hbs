<section id="searchResults">
    {{#if foundStars}}
    <h2 class="ui block centered header">
        {{categoryTitle}}
    </h2>
    {{/if}}

    <div class="ui centered special cards">

        {{#each foundStars}}
        <div class="card">
            <div class="blurring dimmable image">
                <div class="ui dimmer">
                    <div class="content">
                        <div class="center">
                            <a href="/star/{{id}}">
                                {{uppercase name}}
                            </a>
                            <p>
                                {{#if properties}}
                                Total Properties: {{properties.length}}
                                {{else}}
                                Empty Star!
                                {{/if}}

                                {{#if date}}
                                <br>
                                <i class="calendar alternate outline icon"></i>
                                Created on <i>{{formatDate date}}</i>
                                {{/if}}
                            </p>
                        </div>
                    </div>
                </div>
                <img src="{{picture}}">
            </div>
        </div>
        {{/each}}

    </div>

</section>